# .env.local.example
# Copy this file to .env.local and adjust values for your local development setup

# Application Configuration
FLASK_ENV=production
FLASK_APP=run.py
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
# SECRET_KEY is provided by GitLab CI/CD variables

# Database Configuration
# DATABASE_URL is provided by GitLab CI/CD variables
# SQLALCHEMY_DATABASE_URI is provided by GitLab CI/CD variables

# Supabase Configuration
SUPABASE_URL=https://drtrkwhoaxkrmdhtuuwe.supabase.co
# SUPABASE_KEY is provided by GitLab CI/CD variables

# Stripe Configuration
# STRIPE_TEST_API_KEY is provided by GitLab CI/CD variables
# STRIPE_TEST_PUBLISHABLE_KEY is provided by GitLab CI/CD variables
# STRIPE_TEST_WEBHOOK_SECRET is provided by GitLab CI/CD variables
